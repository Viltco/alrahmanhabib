<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_applicant_inherited" model="ir.ui.view">
        <field name="name">hr.applicant.inherited</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="model">hr.applicant</field>
        <field name="priority">100</field>
        <field type="xml" name="arch">
             <xpath expr="//header" position="inside">
                <button id="button_new_request" name="action_new_request" string="New Request"
                        class="btn-primary" type="object" attrs="{'invisible': [('button_show', '=', False)]}"
                        />
            </xpath>
             <xpath expr="//field[@name='source_id']" position="after">
                <field name="button_show" invisible="1"/>
            </xpath>
        </field>
    </record>




</odoo>